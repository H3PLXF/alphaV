<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".shop">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:stretchColumns="1" >

            <TableRow>

                <ImageView
                    android:id="@+id/iv_1"
                    android:layout_width="60dp"
                    android:src="@drawable/butters"></ImageView>

                <ImageView
                    android:id="@+id/iv_2"
                    android:src="@drawable/sudden">
                </ImageView>

            </TableRow>

            <TableRow>

                <ImageView
                    android:layout_width="50dp"
                    android:src="@drawable/butters"></ImageView>

                <ImageView
                    android:src="@drawable/sudden">
                </ImageView>

            </TableRow>

            <TableRow>

                <ImageView
                    android:layout_width="59dp"
                    android:src="@drawable/butters"></ImageView>

                <ImageView
                    android:src="@drawable/sudden">
                </ImageView>

            </TableRow>
        </TableLayout>
    </RelativeLayout>

</ScrollView>